<div class="container-admin">
        {{> userMenu}}
        <div class="user-content">
            {{> userheader}}
            <div class="user-content-table">
                <div class="content-table-container">
                    <h1 class="content-table-container-header">
                        UPDATE HOME
                    </h1>
                    <form  method="POST" action="user/edit-home/{{home._id}}?_method=PUT" enctype="multipart/form-data"  > 
                        <div class="user-addHome">
                            {{!-- <h2 class="text-center mb-5 mt-2">ADD HOME</h2> --}}
                            <div class="form-group d-flex ">
                                <input class="form-control mr-4" type="text" value="{{home.name}}" name="nameHome" placeholder="Home name">
                                <select name="category" class="form-control" >
                                    {{#each categories}}
                                        {{#if home}} 
                                          <option selected value="{{this._id}}">{{this.name}}</option>
                                        {{/if}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group d-flex ">
                                <input class="form-control mr-4" type="text" name="adress" placeholder="Adress" value="{{home.adress}}">
                                <input class="form-control " type="text" name="acreage" placeholder="acreage" value="{{home.acreage}}">
                            </div>
                            <div class="form-group d-flex ">
                                <input class="form-control mr-4 " style="width: 50%;" type="number" name="price" placeholder="10000$" value="{{home.price}}">
                                <div class="input-group " style="width: 50%; ">
                                    <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                    <input type="file" class="custom-file-input"  id="inputGroupFile01" name="fileupload" multiple >
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file >3</label>
                                    </div>
                                </div> 
                            </div>
                            <div class="form-group">
                                <label for="comment">Description</label>
                                <textarea class="form-control" rows="5" name="description" id="comment" >{{home.description}}</textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit"  class="btn btn-primary m-auto d-block w-25">Add</button>
                            </div>    
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>